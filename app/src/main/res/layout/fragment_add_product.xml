<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
    tools:context="ui.admin_dashboard.ui.dsr_details.AddProduct">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="visible"
        android:scrollbars="vertical|horizontal"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:contentPadding="2dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:text="ADD PRODUCT DETAILS"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewAuth"
                android:text="Institute Code"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@id/tv_organization_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Institute Code"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="16sp"
                    android:inputType="textCapCharacters"
                    android:background="@drawable/text_input_border"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextViewAuth"
                android:text="DSR No."
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@id/tv_dsr_no."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DSR No."
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="16sp"
                    android:inputType="number"
                    android:background="@drawable/text_input_border"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                style="@style/TextViewAuth"
                android:text="Purchase Date"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@id/tv_purchase_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="dd/mm/yyyy"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="16sp"
                    android:inputType="date"
                    android:background="@drawable/text_input_border"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextViewAuth"
                android:text="Choose Authority"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/spinner_auth"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="Choose Authority"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextViewAuth"
                android:text="Supplier Name"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@id/tv_supplier_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Supplier Name"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:background="@drawable/text_input_border"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextViewAuth"
                android:text="Supplier Address"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_supplier_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Supplier Address"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="16sp"
                    android:inputType="textMultiLine"
                    android:background="@drawable/text_input_border"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextViewAuth"
                android:text="Product Name"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Name"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:background="@drawable/text_input_border"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextViewAuth"
                android:text="Product Decription"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_product_descr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Description"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="16sp"
                    android:inputType="textMultiLine"
                    android:background="@drawable/text_input_border"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextViewAuth"
                android:text="Quantity"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Quantity"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="16sp"
                    android:inputType="number"
                    android:background="@drawable/text_input_border"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextViewAuth"
                android:text="Price Per Quantity"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_price_per_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price Per Quantity"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="16sp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/text_input_border"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextViewAuth"
                android:text="Quantity Distributed"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                />

                <TextView
                    android:id="@+id/tv_qty_distributed"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="0"
                    android:paddingStart="20dp"
                    android:paddingTop="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="16sp"
                    android:background="@drawable/text_input_border"
                    />


            <TextView
                style="@style/TextViewAuth"
                android:text="Remarks"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Remarks"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="16sp"
                    android:inputType="textMultiLine"
                    android:background="@drawable/text_input_border"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/auth_btn"
                />

        </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>